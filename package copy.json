{
  "name": "pastelaria-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend para kiosk de pastelaria com IA",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node -r dotenv/config --watch server.js",
    "worker": "node workers/cronJobs.js",
    "worker:bull": "node workers/bullQueue.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run worker\""
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "koffi": "^2.14.1",
    "node-cron": "^4.2.1",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
