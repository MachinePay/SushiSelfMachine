{
  "apps": [
    {
      "name": "kiosk-api",
      "script": "server.js",
      "instances": 2,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/api-error.log",
      "out_file": "./logs/api-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "500M"
    },
    {
      "name": "kiosk-worker",
      "script": "workers/cronJobs.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/worker-error.log",
      "out_file": "./logs/worker-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "300M",
      "cron_restart": "0 3 * * *",
      "watch": false
    }
  ]
}
